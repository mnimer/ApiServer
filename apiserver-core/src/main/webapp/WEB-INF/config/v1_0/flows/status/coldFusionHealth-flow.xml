<beans
        xmlns:http="http://www.springframework.org/schema/integration/http"
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:si="http://www.springframework.org/schema/integration"
        xmlns:util="http://www.springframework.org/schema/util"
        xsi:schemaLocation="http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http.xsd

		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <util:list id="messageConverters">
        <bean class="org.springframework.http.converter.ResourceHttpMessageConverter"/>
        <bean class="org.springframework.http.converter.FormHttpMessageConverter"/>
        <bean class="org.springframework.http.converter.StringHttpMessageConverter"/>
    </util:list>

    <!--task:executor id="coldFusionHealthTaskExecutor"  /-->

    <si:channel id="coldFusionHealthRequestChannel">
        <si:queue/>
        <si:interceptors>
            <si:wire-tap channel="CFLoggingChannel"/>
        </si:interceptors>
    </si:channel>

    <si:channel id="coldFusionHealthReplyChannel">
        <si:queue/>
        <si:interceptors>
            <si:wire-tap channel="CFLoggingChannel"/>
        </si:interceptors>
    </si:channel>

    <si:channel id="coldFusionHealthHTTPChannel">
        <si:queue/>
        <si:interceptors>
            <si:wire-tap channel="CFLoggingChannel"/>
        </si:interceptors>
        <!--si:dispatcher task-executor="coldFusionHealthTaskExecutor"/-->
    </si:channel>


    <si:logging-channel-adapter
            id="CFLoggingChannel"
            level="INFO"
            />



    <si:gateway id="coldFusionHealthApiGateway"
                service-interface="apiserver.apis.v1_0.status.gateways.ApiStatusColdFusionGateway"
                default-reply-channel="coldFusionHealthReplyChannel"
                default-reply-timeout="#{applicationProperties.defaultReplyTimeout}">

        <si:method name="checkColdfusionSync"
                   request-channel="coldFusionHealthRequestChannel"
                   payload-expression="new java.util.Date().toGMTString()">  <!-- add a fake payload-expression, spring doesn't like empty payloads for http requests -->
            <si:header name="REQUEST_TYPE" value="#{coldfusionProperties.REQUEST_TYPE}"/>
        </si:method>

        <si:method name="checkColdfusionAsync"
                   request-channel="coldFusionHealthRequestChannel"
                   payload-expression="new java.util.Date().toGMTString()">  <!-- add a fake payload-expression, spring doesn't like empty payloads for http requests -->
            <si:header name="REQUEST_TYPE" value="#{coldfusionProperties.REQUEST_TYPE}"/>
        </si:method>
    </si:gateway>



    <si:header-value-router input-channel="coldFusionHealthRequestChannel"
                            header-name="REQUEST_TYPE" >
        <!--si:poller fixed-rate="5" max-messages-per-poll="1"/-->
        <si:mapping value="http" channel="coldFusionHealthHTTPChannel"/>
    </si:header-value-router>



    <si:service-activator
            input-channel="coldFusionHealthHTTPChannel"
            output-channel="coldFusionHealthConversionChannel"
            method="healthHandler">
        <bean class="apiserver.apis.v1_0.status.services.ColdFusionStatusService"/>
    </si:service-activator>

    <!--si:chain id="trafficGatewayChain"
              input-channel="coldFusionHealthHTTPChannel"
              output-channel="coldFusionHealthReplyChannel">
        <si:transformer>
            <bean class="apiserver.core.common.transformers.DebugTransformer"/>
        </si:transformer>

    </si:chain-->
    <si:json-to-object-transformer
            input-channel="coldFusionHealthConversionChannel"
            output-channel="coldFusionHealthReplyChannel"
            type="java.util.HashMap"/>
</beans>