		</property>
		<property name="sourceMap">
			<map>
				<entry key="tomcatHost" value="127.0.0.1" />
				<entry key="tomcatPort" value="8080" />
				<entry key="tomcatContextRoot" value="/apiserver-core" />
			</map>
		</property>
	</bean>

