<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">


    <bean id="JcrBridge" class="apiserver.core.connectors.jcr.JcrBridge" init-method="validate">
        <property name="repository" ref="repository"/>
    </bean>


    <bean id="repository" class="org.apache.jackrabbit.core.RepositoryImpl">
        <constructor-arg index="0">
            <bean id="config" class="org.apache.jackrabbit.core.config.RepositoryConfig" factory-method="create">
                <!--constructor-arg index="0" value="/Volumes/storageHD/Development/bitbucket/applications/apiserver/apiserver-core/src/main/webapp/WEB-INF/config/repository.xml"/-->
                <constructor-arg index="0" value="classpath:jcr/repository-embedded.xml" type="java.io.InputStream"/>
                <constructor-arg index="1" value="./tmp/repository" />
            </bean>
        </constructor-arg>
    </bean>




</beans>